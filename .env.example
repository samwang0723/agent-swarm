# Intent Detection Configuration
# Controls how the system detects user intent from voice input
# Available modes:
#   - keyword: Simple keyword-based detection (fastest, basic accuracy)
#   - pattern: Advanced pattern-based detection with NLP (slower, better accuracy)
#   - hybrid: Combines both keyword and pattern detection (balanced performance/accuracy)
# Use 'keyword' for simple use cases, 'pattern' for complex language patterns,
# or 'hybrid' for best overall accuracy with moderate performance impact
INTENT_DETECTOR_MODE=keyword

# Confidence threshold for intent detection (0.0 to 1.0)
# Higher values require more confident matches but reduce false positives
# Lower values are more permissive but may increase false positives
# Recommended: 0.3-0.7 depending on your accuracy requirements
INTENT_CONFIDENCE_THRESHOLD=0.5

MCP_TIMEOUT=60000

# Enable detailed MCP tool execution debugging (set to '1' to enable)
# Set DEBUG_MCP=1 when troubleshooting tool execution issues
# This will enable verbose logging of parameter flow and schema validation
DEBUG_MCP=0

# Mastra Configuration
# Mastra framework is the primary agent system
USE_MASTRA=true

# PostgreSQL Database Configuration for Mastra Memory Adapter
DATABASE_URL=postgresql://username:password@localhost:5432/agent_swarm
DB_HOST=localhost
DB_PORT=5432
DB_NAME=agent_swarm
DB_USER=username
DB_PASSWORD=password

# Mastra Memory Configuration
MASTRA_MEMORY_RETENTION_DAYS=30
MASTRA_MEMORY_MAX_MESSAGES=1000
MASTRA_MEMORY_ENABLE_VECTOR_SEARCH=false

# Mastra Workflow Configuration
MASTRA_WORKFLOW_TIMEOUT=300000
MASTRA_WORKFLOW_MAX_STEPS=50
MASTRA_WORKFLOW_ENABLE_DEBUGGING=false

# Mastra Development Configuration
MASTRA_LOG_LEVEL=info
MASTRA_ENABLE_TELEMETRY=false
MASTRA_DEV_MODE=false

PORT=3000
